<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<GridLayout
		android:id="@+id/edit_g"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:alignmentMode="alignBounds"
		android:rowCount="6"
		android:columnCount="4"
		android:layout_marginRight="3dp"
		android:layout_marginLeft="3dp">

		<TextView
			android:layout_height="wrap_content"
			android:text="Article No.:"
			android:layout_width="wrap_content"
			android:layout_column="0"
			android:layout_row="0"/>

		<EditText
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="3"
			android:layout_width="wrap_content"
			android:id="@+id/edit_art_num"
			android:layout_column="1"
			android:layout_row="0"
			android:singleLine="true"
			android:text="1"
			android:gravity="right"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Titre No.:"
			android:layout_width="wrap_content"
			android:layout_column="0"
			android:layout_row="1"/>

		<EditText
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="3"
			android:layout_width="wrap_content"
			android:id="@+id/edit_tit_num"
			android:singleLine="true"
			android:text="1"
			android:gravity="right"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Text:"
			android:layout_width="wrap_content"/>

		<HorizontalScrollView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<EditText
				android:layout_height="wrap_content"
				android:inputType="text"
				android:ems="6"
				android:nestedScrollingEnabled="true"
				android:layout_width="wrap_content"
				android:id="@+id/edit_tit_text"
				android:singleLine="true"/>

		</HorizontalScrollView>

		<TextView
			android:layout_height="wrap_content"
			android:text="Chapitre No.:"
			android:layout_width="wrap_content"
			android:layout_column="0"
			android:layout_row="2"/>

		<EditText
			android:layout_height="wrap_content"
			android:ems="3"
			android:layout_width="wrap_content"
			android:id="@+id/edit_chap_num"
			android:singleLine="true"
			android:text="1"
			android:gravity="right"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Text:"
			android:layout_width="wrap_content"/>

		<HorizontalScrollView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<EditText
				android:layout_height="wrap_content"
				android:ems="6"
				android:nestedScrollingEnabled="true"
				android:layout_width="wrap_content"
				android:id="@+id/edit_chap_text"
				android:singleLine="true"/>

		</HorizontalScrollView>

		<TextView
			android:layout_height="wrap_content"
			android:text="Section No.:"
			android:layout_width="wrap_content"
			android:layout_row="3"
			android:layout_column="0"/>

		<EditText
			android:layout_height="wrap_content"
			android:ems="3"
			android:layout_width="wrap_content"
			android:id="@+id/edit_sect_num"
			android:singleLine="true"
			android:gravity="right"
			android:text="1"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Texte:"
			android:layout_width="wrap_content"/>

		<HorizontalScrollView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<EditText
				android:layout_height="wrap_content"
				android:nestedScrollingEnabled="true"
				android:layout_width="match_parent"
				android:scrollbars="horizontal"
				android:ems="6"
				android:id="@+id/edit_sect_text"
				android:singleLine="true"/>

		</HorizontalScrollView>

		<TextView
			android:layout_height="wrap_content"
			android:text="Contenu:"
			android:layout_width="wrap_content"
			android:layout_row="4"/>

		<ScrollView
			android:layout_height="wrap_content"
			android:layout_row="5"
			android:layout_width="match_parent"
			android:layout_column="0"
			android:layout_columnSpan="4">

			<EditText
				android:layout_height="wrap_content"
				android:inputType="textMultiLine"
				android:layout_width="match_parent"
				android:id="@+id/edit_text_content"
				android:nestedScrollingEnabled="true"
				android:minLines="5"
				android:maxLines="10"
				android:gravity="top|left"
				android:minEms="17"/>

		</ScrollView>

	</GridLayout>

	<LinearLayout
		android:id="@+id/edit_l"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal">

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Enregistrer"
			android:id="@+id/confirm_btn"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Effacer"
			android:id="@+id/delete_btn"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Annuler"
			android:id="@+id/cancel_btn"/>

	</LinearLayout>

</LinearLayout>

